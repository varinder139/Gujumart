<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="151dp"
    android:layout_height="351dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/scv_tag"
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/offer_tag" />

        <ImageView
            android:id="@+id/scv_product_image"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tag"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imageone" />

        <TextView
            android:id="@+id/scv_product_title"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:lineHeight="20dp"
            android:text="Garlic Paste"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scv_mrptext"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:fontFamily="@font/baloo"
                android:lineHeight="20dp"
                android:padding="1dp"
                android:text="MRP."
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/scv_mrpprice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/red"
                android:fontFamily="@font/baloo"
                android:lineHeight="20dp"
                android:padding="1dp"
                android:text="999.00"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scv_rs"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:fontFamily="@font/baloo"
                android:lineHeight="20dp"
                android:padding="1dp"
                android:text="Rs."
                android:textSize="15sp" />

            <TextView
                android:id="@+id/scv_mrp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/baloo"
                android:lineHeight="20dp"
                android:padding="1dp"
                android:text="99.00"
                android:textSize="15sp" />


        </LinearLayout>

        <Button
            android:id="@+id/scv_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/custom_button"
            android:text="Add to cart"
            android:textColor="@color/whiteColor" />


    </LinearLayout>

</androidx.cardview.widget.CardView>