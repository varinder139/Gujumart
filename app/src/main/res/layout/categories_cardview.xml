<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="5dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/ccv_mainimage"
                android:layout_width="80dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/imageone" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="165dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/ccv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:lineHeight="10dp"
                    android:text="Fruits And Vegetables "
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ccv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:lineHeight="10dp"
                    android:text="1KG"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="19dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ccv_mrptext"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:fontFamily="@font/baloo"
                        android:lineHeight="20dp"
                        android:padding="1dp"
                        android:text="MRP."
                        android:textSize="15sp"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/ccv_mrpprice"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:fontFamily="@font/baloo"
                        android:lineHeight="20dp"
                        android:padding="1dp"
                        android:text="999.00"
                        android:textSize="15sp"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/ccv_rstext"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:fontFamily="@font/baloo"
                        android:lineHeight="20dp"
                        android:padding="1dp"
                        android:text="Rs."
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/ccv_rspprice"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:fontFamily="@font/baloo"
                        android:lineHeight="20dp"
                        android:padding="1dp"
                        android:text="999.00"
                        android:textSize="15sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/ccv_add_to_cart"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@drawable/custom_button"
                    android:layout_marginTop="10dp"
                    android:text="Add to cart" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

